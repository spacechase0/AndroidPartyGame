<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.fsu.cs.cop4656.kingdomparty.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="96dp"
            android:layout_marginTop="100dp"
            android:textSize="25dp"
            android:id="@+id/profileName" />

        <TextView
            android:text="Games Won: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="81dp"
            android:id="@+id/gamesWon"
            android:textSize="20dp"
            android:layout_below="@+id/profileName"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="MiniGames Won: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="23dp"
            android:id="@+id/minigamesWon"
            android:layout_below="@+id/gamesWon"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_people_black_24dp"
            android:layout_alignBottom="@+id/profileName"
            android:layout_toStartOf="@+id/gamesWon"
            android:id="@+id/imageView3" />
    </RelativeLayout>
</FrameLayout>
